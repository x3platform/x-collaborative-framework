<?xml version="1.0" encoding="utf-8" ?>
<!--
    /*
     * The sessions application block configuration file.
     *
     * Update : 2010.01.01
     */
-->
<configuration>
    <!-- sessions configuration begin -->
    <sessions>
        <keys>
            <!-- Spring.NET : 配置文件 -->
            <add name="SpringObjectFile" value="config\X3Platform.Sessions.Spring.config" />
            <!-- IBatis : 配置映射文件 -->
            <add name="IBatisMapping" value="config\X3Platform.Sessions.IBatis.SqlMap.config" />
            <!-- 会话持久化 : 可选的值 1.On 2.Off(默认) -->
            <add name="SessionPersistentMode" value="Off" />
            <!-- 会话定时器执行时间间隔(单位:分钟) -->
            <add name="SessionTimerInterval" value="15" />
            <!-- 会话时间限制(单位:分钟) -->
            <add name="SessionTimeLimit" value="3600" />
        </keys>
    </sessions>
    <!-- sessions configuration end -->
</configuration>