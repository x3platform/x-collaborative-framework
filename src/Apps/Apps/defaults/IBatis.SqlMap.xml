<?xml version="1.0" encoding="utf-8"?>
<sqlMapConfig xmlns="http://ibatis.apache.org/dataMapper" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" >
    <settings>
        <setting useStatementNamespaces="false"/>
        <setting cacheModelsEnabled="true"/>
        <setting validateSqlMap="false"/>
        <setting useReflectionOptimizer="true"/>
    </settings>

    <providers embedded="X3Platform.IBatis.defaults.X3Platform.IBatis.Providers.config"/>

    <database>
        <provider name="MySql" />
        <dataSource name="IBatis" connectionString="server=${DatabaseSettings.DataSource};database=${DatabaseSettings.Database};uid=${DatabaseSettings.LoginName};pwd=${DatabaseSettings.Password};connection reset=false;connection lifetime=10;min pool size=1;max pool size=512" />
    </database>

    <typeHandlers>
        <typeHandler type="string" callback="AnsiStringTypeHandler"/>
    </typeHandlers>

    <sqlMaps>
        <sqlMap embedded="X3Platform.Apps.DAL.IBatis.ApplicationProvider.xml" />
        <sqlMap embedded="X3Platform.Apps.DAL.IBatis.ApplicationErrorProvider.xml"/>
        <sqlMap embedded="X3Platform.Apps.DAL.IBatis.ApplicationEventProvider.xml"/>
        <sqlMap embedded="X3Platform.Apps.DAL.IBatis.ApplicationFeatureProvider.xml"/>
        <sqlMap embedded="X3Platform.Apps.DAL.IBatis.ApplicationFeatureDateLimitProvider.xml"/>
        <sqlMap embedded="X3Platform.Apps.DAL.IBatis.ApplicationPackageProvider.xml"/>
        <sqlMap embedded="X3Platform.Apps.DAL.IBatis.ApplicationPackageLogProvider.xml"/>
        <sqlMap embedded="X3Platform.Apps.DAL.IBatis.ApplicationSettingGroupProvider.xml"/>
        <sqlMap embedded="X3Platform.Apps.DAL.IBatis.ApplicationSettingProvider.xml"/>
        <sqlMap embedded="X3Platform.Apps.DAL.IBatis.ApplicationMenuProvider.xml"/>
        <sqlMap embedded="X3Platform.Apps.DAL.IBatis.ApplicationMethodProvider.xml"/>
        <sqlMap embedded="X3Platform.Apps.DAL.IBatis.ApplicationOptionProvider.xml"/>
    </sqlMaps>
</sqlMapConfig>
