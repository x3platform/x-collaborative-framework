<?xml version="1.0" encoding="utf-8" ?>
<!--
    /*
     * The connect application block configuration file.
     *
     * Update : 2010.01.01
     */
-->
<configuration>
    <configSections>
        <section name="connectConfiguration"  type="X3Platform.Connect.Configuration.ConnectConfiguration,X3Platform.Connect" />
    </configSections>

    <!-- connect configuration begin -->

    <connectConfiguration>
        <keys>
            <!-- Spring.NET : 配置文件 -->
            <add name="SpringObjectFile" value="config\X3Platform.Connect.Spring.config" />
            <!-- IBatis : 配置映射文件 -->
            <add name="IBatisMapping" value="config\X3Platform.Connect.IBatis.SqlMap.config" />
            <!-- API主机名 -->
            <add name="ApiHostName" value="${HostName}" />
            <!-- 会话时间限制 (单位:秒) -->
            <add name="SessionTimeLimit" value="86400" />
            <!-- 跟踪调用信息 : On | Off(默认) -->
            <add name="TrackingCall" value="Off" />
        </keys>
    </connectConfiguration>

    <!-- connect configuration end -->

</configuration>