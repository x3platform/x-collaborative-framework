    <statements>
        <insert id="proc_Customize_Widget_Insert" parameterClass="WidgetInfo" >
            INSERT INTO [tb_Customize_Widget]
            (
                Id,
                Name,
                Title,
                Height,
                Width,
                Url,
                Description,
                Options,
                OptionHtml,
                Tags,
                ClassName,
                RedirctUrl,
                OrderId,
                Status,
                UpdateDate,
                CreateDate
            )
            VALUES
            (
                #Id#,
                #Name#,
                #Title#,
                #Height#,
                #Width#,
                #Url#,
                #Description#,
                #Options#,
                #OptionHtml#,
                #Tags#,
                #ClassName#,
                #RedirctUrl#,
                #OrderId#,
                #Status#,
                CURRENT_TIMESTAMP,
                CURRENT_TIMESTAMP
            )
        </insert>

        <update id="proc_Customize_Widget_Update" parameterClass="WidgetInfo" >
            UPDATE [tb_Customize_Widget] SET

                Name = #Name#,
                Title = #Title#,
                Height = #Height#,
                Width = #Width#,
                Url = #Url#,
                Description = #Description#,
                Options = #Options#,
                OptionHtml = #OptionHtml#,
                Tags = #Tags#,
                ClassName = #ClassName#,
                RedirctUrl = #RedirctUrl#,
                OrderId = #OrderId#,
                Status = #Status#,
                UpdateDate = CURRENT_TIMESTAMP

            WHERE Id = #Id#
        </update>

        <delete id="proc_Customize_Widget_Delete">
            DELETE FROM [tb_Customize_Widget] WHERE Id IN($Ids$)
        </delete>

        <select id="proc_Customize_Widget_FindOne" parameterClass="WidgetInfo" resultMap="proc_Customize_Widget_FindOne_Result" >
            SELECT * FROM [tb_Customize_Widget] WHERE [Id] = #Id#
        </select>

        <select id="proc_Customize_Widget_FindOneByName" parameterClass="WidgetInfo" resultMap="proc_Customize_Widget_FindOne_Result" >
            SELECT * FROM [tb_Customize_Widget] WHERE [Name] = #Name#
        </select>

        <select id="proc_Customize_Widget_FindAll" resultMap="proc_Customize_Widget_FindAll_Result" parameterClass="WidgetInfo" >
            SELECT

            <dynamic prepend="TOP">
                <isNotEqual prepend="TOP" property="Length" compareValue = "0">
                    $Length$
                </isNotEqual>
            </dynamic>

            * FROM [tb_Customize_Widget]

            <dynamic prepend="WHERE">
                <isParameterPresent>
                    <isNotEmpty prepend="AND" property="WhereClause" >
                        $WhereClause$
                    </isNotEmpty>
                </isParameterPresent>
            </dynamic>
        </select>

        <select id="proc_Customize_Widget_GetPages" parameterClass="WidgetInfo" resultMap="proc_Customize_Widget_FindAll_Result" >
            SELECT *

            FROM (SELECT *, ROW_NUMBER() OVER(ORDER BY $OrderBy$) AS RowIndex

            FROM [tb_Customize_Widget] T

            <dynamic prepend="WHERE">
                <isParameterPresent>
                    <isNotEmpty prepend="AND" property="WhereClause" >
                        $WhereClause$
                    </isNotEmpty>
                </isParameterPresent>
            </dynamic>) TableIndex

            WHERE TableIndex.RowIndex BETWEEN $StartIndex$ + 1 AND $StartIndex$ + $pageSize$

        </select>

        <select id="proc_Customize_Widget_GetRowCount" >

            SELECT COUNT(*) AS 'RowCount' FROM [tb_Customize_Widget] T

            <dynamic prepend="WHERE">
                <isParameterPresent>
                    <isNotEmpty prepend="AND" property="WhereClause" >
                        $WhereClause$
                    </isNotEmpty>
                </isParameterPresent>
            </dynamic>
        </select>

        <select id="proc_Customize_Widget_IsExist" >
            SELECT COUNT(*) AS 'Count' FROM [tb_Customize_Widget] T WHERE $WhereClause$
        </select>

        <select id="proc_Customize_Widget_GetOptionHtml" >
            SELECT OptionHtml FROM [tb_Customize_Widget] T WHERE Id = #Id#
        </select>
        
    </statements>
