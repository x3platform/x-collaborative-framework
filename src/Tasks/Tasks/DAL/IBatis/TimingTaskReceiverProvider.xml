        <typeAlias alias="TaskWaitingItemInfo" type="X3Platform.Tasks.Model.TaskWaitingItemInfo,X3Platform.Tasks" />
        <typeAlias alias="TimingTaskReceiverInfo" type="X3Platform.Tasks.Model.TimingTaskReceiverInfo,X3Platform.Tasks" />
    </alias>
    <resultMaps>
        <resultMap id="proc_TimingTask_Receiver_FindOne_Result" class="TaskWaitingItemInfo">
            <result property="Id" column="Id" />
