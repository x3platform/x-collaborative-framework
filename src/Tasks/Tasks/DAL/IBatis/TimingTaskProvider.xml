                Id,
                ApplicationId,
                TaskCode,
                Type,
                Title,
                Content,
                Tags,
                SenderId,
                TriggerTime,
                CreateDate
            )
            VALUES
            (
                #Id#,
                #ApplicationId#,
                #TaskCode#,
                #Type#,
                #Title#,
                #Content#,
                #Tags#,
                #SenderId#,
                #TriggerTime#,
                #CreateDate#
            )
        </insert>

        <update id="proc_TimingTask_Update" parameterClass="TimingTaskInfo">
            UPDATE tb_Task_WaitingItem SET

                Id = #Id#,
                ApplicationId = #ApplicationId#,
                TaskCode = #TaskCode#,
                Type = #Type#,
                Title = #Title#,
                Content = #Content#,
                Tags = #Tags#,
                SenderId = #SenderId#,
                TriggerTime = #TriggerTime#,
                CreateDate = #CreateDate#

            WHERE Id = #Id#
        </update>
        
        <insert id="proc_TimingTask_Save" parameterClass="TimingTaskInfo">
            IF EXISTS(SELECT 0 FROM tb_Task_WaitingItem WHERE Id = #Id#)
            BEGIN
            UPDATE tb_Task_WaitingItem SET

            Id = #Id#,
            ApplicationId = #ApplicationId#,
            TaskCode = #TaskCode#,
            Type = #Type#,
            Title = #Title#,
            Content = #Content#,
            Tags = #Tags#,
            SenderId = #SenderId#,
            TriggerTime = #TriggerTime#,
            CreateDate = #CreateDate#

            WHERE Id = #Id#
            END
            ELSE
            BEGIN
            INSERT INTO tb_Task_WaitingItem(
            Id,
            ApplicationId,
            TaskCode,
            Type,
            Title,
            Content,
            Tags,
            SenderId,
            TriggerTime,
            CreateDate
            )
            VALUES
            (
            #Id#,
            #ApplicationId#,
            #TaskCode#,
            #Type#,
            #Title#,
            #Content#,
            #Tags#,
            #SenderId#,
            #TriggerTime#,
            #CreateDate#
            )
            END
        </insert>
        
