<?xml version="1.0" encoding="utf-8" ?>
<!--
    /*
     * The storages application block configuration file.
     *
     * Update : 2010.01.01
     */
-->
<configuration>
    <configSections>
        <section name="storagesConfiguration"  type="X3Platform.Storages.Configuration.StoragesConfiguration,X3Platform.Storages" />
    </configSections>

    <!-- storages configuration begin -->

    <storagesConfiguration>
        <keys>
            <!-- SQL Server : 数据库连接名称 -->
            <add name="DataSourceName" value="ConnectionString" />
            <!-- Spring.NET : 配置文件 -->
            <add name="SpringObjectFile" value="config\X3Platform.Storages.Spring.config" />
            <!-- IBatis : 配置映射文件 -->
            <add name="IBatisMapping" value="config\X3Platform.Storages.IBatis.SqlMap.config" />
        </keys>
    </storagesConfiguration>

    <!-- storages configuration end -->

</configuration>