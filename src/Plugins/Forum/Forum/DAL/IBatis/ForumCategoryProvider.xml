    <insert id="proc_Forum_Category_Insert" parameterClass="ForumCategoryInfo">
      INSERT INTO tb_Forum_Category
      (
        Id,
        AccountId,
        AccountName,
        CategoryIndex,
        Description,
        Anonymous,
        PublishThreadPoint,
        PublishCommentPoint,
        TodayCount,
        WeekCount,
        MonthCount,
        TotalCount,
        Hidden,
        OrderId,
        Status,
        Remark,
        ModifiedDate,
        CreatedDate
      )
      VALUES
      (
        #Id#,
        #AccountId#,
        #AccountName#,
        #CategoryIndex#,
        #Description#,
        #Anonymous#,
        #PublishThreadPoint#,
        #PublishCommentPoint#,
        #TodayCount#,
        #WeekCount#,
        #MonthCount#,
        #TotalCount#,
        #Hidden#,
        #OrderId#,
        #Status#,
        #Remark#,
        CURRENT_TIMESTAMP,
        CURRENT_TIMESTAMP
