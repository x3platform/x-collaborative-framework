        {
          <a href="javascript:main.forum.thread.detail.setTop('@ViewBag.param.Id');" class="btn btn-default"><span id="isTopTip">设置置顶</span></a>
          <a href="javascript:main.forum.thread.detail.setEssential('@ViewBag.param.Id}');" class="btn btn-default"><span id="isEssentialTip">设置精华</span></a>
        }
        <a href="javascript:x.wizards.getRecommendWizard({url:'/services/Elane/X/Forum/Ajax.ForumThreadWrapper.aspx',customTableName:'', entityId:'@ViewBag.param.Id}', entityTitle:'@ViewBag.param.Title}', entityViewUrlFormat:'@ViewBag.url}'});" class="btn btn-default">推荐</a>
