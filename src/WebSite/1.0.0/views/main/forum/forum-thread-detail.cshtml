    <div style="padding:8px 8px 3px 8px;">
      <div class="pull-left">
        <a href="javascript:main.forum.thread.detail.useBack('','楼主','@ViewBag.param.AccountName}','@ViewBag.CreateDate}');" class="btn btn-default btn-sm">回帖</a>
        <a href="forum-thread-form.aspx" class="btn btn-default btn-sm">发帖</a>
