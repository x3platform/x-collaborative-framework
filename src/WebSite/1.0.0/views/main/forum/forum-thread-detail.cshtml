  @*编辑有效天数*@
  <input id="dayCountStr" name="dayCountStr" type="hidden" value="@ViewBag.dayCountStr" />
  @*推荐*@
  <input id="threadTitle" name="threadTitle" type="hidden" value="@ViewBag.param.Title" />
  <input id="threadCategory" name="threadCategory" type="hidden" value="@ViewBag.param.CategoryIndex" />
  @*回帖编号*@
