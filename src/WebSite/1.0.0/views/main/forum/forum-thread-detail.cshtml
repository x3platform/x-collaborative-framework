  <input id="categoryId" name="categoryId" type="hidden" value="@ViewBag.param.CategoryId" />
  @*<input id="sign" name="sign" type="hidden" value="@ViewBag.param.Sign" />*@
  <input id="pageSize" name="pageSize" type="hidden" value="@ViewBag.pageSize" />
  @*论坛电梯功能*@
  <input id="currentPage" name="currentPage" type="hidden" value="@ViewBag.currentPage" />
  <input id="showFloor" name="showFloor" type="hidden" value="@ViewBag.showFloor" />
  @*当前登录人信息*@
  <input id="userId" name="userId" type="hidden" value="@ViewBag.member.AccountId" />
  <input id="userDisplayName" name="userDisplayName" type="hidden" value="@ViewBag.member.AccountName" />
  @*回复的信息标识*@
  <input id="useShow" name="useShow" type="hidden" value="" />
  @*是否是管理员*@
