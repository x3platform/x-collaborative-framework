@{ Layout = "~/views/templates/themes/" + ViewBag.ThemeName + "/render.cshtml"; }
<script type="text/javascript" src="/resources/javascript/app/x.app.js"></script>
<script type="text/javascript" src="/views/shared/wizards/application-wizard.js"></script>
<script type="text/javascript" src="/views/shared/wizards/application-setting-group-wizard.js"></script>
<script type="text/javascript" src="/views/shared/wizards/contacts-wizard.js"></script>
<script type="text/javascript" src="/views/main/applications/application-setting-group-list.js"></script>
@Html.Raw(X3Platform.Web.Builder.BuilderContext.Instance.MenuManagement.GetMenu(ViewBag.account, ViewBag.application.ApplicationName, new Dictionary<string, string> { { "currentMenuFullPath", @"应用管理\应用参数分组" } }))
<div id="window-container" class="window-container">
    <div id="window-main-table" class="table">
        <div id="window-main-table-header" class="table-header x-freeze-height">
            <span>应用参数分组</span>
        </div>
        <div class="table-row-filter form-inline text-right x-freeze-height">
            <label>当前应用系统</label>
            <div class="input-group">
                <input id="searchApplicationName" name="searchApplicationName" type="text" value="@ViewBag.searchApplication.ApplicationDisplayName" class="form-control input-sm" />
                <input id="searchApplicationId" name="searchApplicationId" type="hidden" value="@ViewBag.searchApplication.Id" />
                <a id="btnApplicationWizard" role="button" class="input-group-addon" title="编辑" ><i class="glyphicon glyphicon-modal-window"></i></a>
            </div>
        </div>
        <div id="window-main-table-body" class="table-body">
            <table class="table table-nopadding">
                <tr>
                    <td class="table-sidebar">
                        <div id="window-main-table-sidebar">
                            <div class="table-sidebar-search form-inline">
                                <input id="searchText" type="text" value="" class="table-sidebar-search-text form-control input-sm" /> 
                                <button id="btnFilter" class="btn btn-default btn-sm" title="查询"><i class="glyphicon glyphicon-search"></i></button>
                            </div>
                            <div id="treeViewContainer" class="table-sidebar-tree-view"></div>
                        </div>
                    </td>
                    <td>
                        <div id="window-main-table-container"><span class="tooltip-loading-text "><img src="/resources/images/loading.gif" alt="正在加载..." /></span></div>
                    </td>
                </tr>
            </table>
        </div>
        <div id="window-main-table-footer" class="table-footer x-freeze-height"></div>
    </div>
</div>