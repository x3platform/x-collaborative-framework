@{ Layout = "~/views/templates/themes/" + ViewBag.ThemeName + "/render.cshtml"; }
<script type="text/javascript" src="/resources/scripts/app/x.app.js"></script>
<script type="text/javascript" src="/views/shared/wizards/contacts-wizard.js"></script>
<script type="text/javascript" src="/views/main/bugs/assets-scripts.js"></script>
<script type="text/javascript" src="/views/main/bugs/bug-list.js"></script>
@Html.Raw(X3Platform.Web.Builder.BuilderContext.Instance.MenuManagement.GetMenu(ViewBag.account, ViewBag.application.ApplicationName, new Dictionary<string, string> { { "currentMenuFullPath", @"费用报销管理\费用报销管理" } }))
<div id="window-container" class="window-container">
  <div id="window-main-table" class="table-style" style="width:100%;">
    <div id="window-main-table-header" class="table-header x-freeze-height">
      <input id="isAdminToken" name="isAdminToken" type="hidden" value="@ViewBag.isAdminToken" />
      <input id="session-accountId" name="session-accountId" type="hidden" value="@ViewBag.account.Id" />
      <span>@I18n.Translates["Bugs","Bugs", StringCase.FirstUpper]</span>
    </div>
    <div id="window-main-table-body" class="table-body">
      <div class="table-row-filter form-inline text-right x-freeze-height">
        <div class="form-group">
          <label for="query-searchText">@I18n.Translates["Keywords"]</label>
          <input id="query-searchText" type="text" class="form-control input-sm" style="width:160px" />
        </div>
        <div class="form-group">
          <label for="query-categoryName">@I18n.Translates["Bugs", "Category"]</label>
          <div class="input-group">
            <input id="query-categoryName" type="text" x-dom-feature="fastClearInput" fastclearinputhiddenids="query-categoryIndex" class="form-control input-sm" style="width:160px" />
            <input id="query-categoryIndex" type="hidden" />
            <a href="javascript:main.bugs.bug.list.getCategoryWizard()" class="input-group-addon" title="@I18n.Strings["btn_edit"]"><i class="glyphicon glyphicon-modal-window"></i></a>
          </div>
        </div>
        <label for="query-status">@I18n.Translates["Bugs", "Status"]</label>
        <div class="form-group">
          <input id="query-status" type="text" value="" x-dom-feature="combobox" x-dom-combobox-selectedText="" x-dom-xhr-url="/api/application.setting.getCombobox.aspx" x-dom-combobox-empty-item-text="@I18n.Strings["text_all"]" x-dom-xhr-params="{applicationSettingGroupName:'应用管理_协同平台_问题跟踪_问题状态'}" class="form-control input-sm" style="width:80px" />
        </div>
        <button id="btnFilter" class="btn btn-default btn-sm"><i class="glyphicon glyphicon-search" title="@I18n.Strings["btn_query"]"></i></button>
      </div>
      <div id="window-main-table-container"><span class="tooltip-loading-text "><img src="/resources/images/loading.gif" alt="正在加载..." /></span></div>
    </div>
    <div id="window-main-table-footer" class="table-footer x-freeze-height"></div>
  </div>
</div>
