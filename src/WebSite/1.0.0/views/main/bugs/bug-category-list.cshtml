@{ Layout = "~/views/templates/themes/" + ViewBag.ThemeName + "/render.cshtml"; }
<script type="text/javascript" src="/resources/scripts/app/x.app.js"></script>
<script type="text/javascript" src="/views/main/bugs/bug-category-list.js"></script>
@Html.Raw(X3Platform.Web.Builder.BuilderContext.Instance.MenuManagement.GetMenu(ViewBag.account, ViewBag.application.ApplicationName, new Dictionary<string, string> { { "currentMenuFullPath", @"人员及权限管理\组织管理" } }))
<div id="window-container" class="window-container">
  <div id="window-main-table" class="table">
    <div id="window-main-table-header" class="table-header x-freeze-height">
	   	<input id="isAdminToken" name="isAdminToken" type="hidden" value="@ViewBag.isAdminToken" />
      <div id="toolbar" class="table-toolbar">
        <a href="/bugs/bug-category/form" target="_blank" class="btn btn-default"><i class="glyphicon glyphicon-plus" title="新增"></i> 新增</a>
      </div>
      <span>类别设置</span>
    </div>
    <div id="window-main-table-body" class="table-body">
      <table class="table table-nopadding">
        <tr>
          <td class="table-sidebar">
            <div id="window-main-table-sidebar form-inline">
              <div class="table-sidebar-search">
                <input id="searchText" type="text" value="" class="table-sidebar-search-text form-control input-sm" />
                <button id="btnFilter" class="btn btn-default btn-sm" title="查询"><i class="glyphicon glyphicon-search"></i></button>
              </div>
              <div id="treeViewContainer" class="table-sidebar-tree-view"></div>
              <input id="treeViewId" name="treeViewId" type="hidden" value="00000000-0000-0000-0000-000000000000" />
              <input id="treeViewName" name="treeViewName" type="hidden" value="问题类别设置" />
              <input id="treeViewRootTreeNodeId" name="treeViewRootTreeNodeId" type="hidden" value="00000000-0000-0000-0000-000000000001" />
            </div>
          </td>
          <td>
            <div id="window-main-table-container"><span class="tooltip-loading-text "><img src="/resources/images/loading.gif" alt="正在加载..." /></span></div>
          </td>
        </tr>
      </table>
    </div>
    <div id="window-main-table-footer" class="table-footer x-freeze-height"></div>
  </div>
</div>