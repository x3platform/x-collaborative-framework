<?xml version="1.0" encoding="utf-8" ?>
<!--
    /*
     * The human resources application block configuration file.
     *
     * Update : 2010.01.01
     */     
     
     DataSourceName : ConnectionString (SQLServer)
     IBatisMapping : config\X3Platform.Membership.IBatis.SqlMap.config (IBatis) 
-->
<configuration>
    <configSections>
        <section name="humanResourcesConfiguration"  type="X3Platform.Membership.HumanResources.Configuration.HumanResourcesConfiguration,X3Platform.Membership.HumanResources" />
    </configSections>

    <!-- human resources configuration begin -->

    <humanResourcesConfiguration>
        <keys>
            <!-- SQL Server : 数据库连接名称 -->
            <add name="DataSourceName" value="ConnectionString" />
            <!-- Spring.NET : 配置文件 -->
            <add name="SpringObjectFile" value="config\X3Platform.Membership.HumanResources.Spring.config" />
            <!-- IBatis : 配置映射文件 -->
            <add name="IBatisMapping" value="config\X3Platform.Membership.HumanResources.IBatis.SqlMap.config" />
        </keys>
    </humanResourcesConfiguration>

    <!-- human resources configuration end -->

</configuration>