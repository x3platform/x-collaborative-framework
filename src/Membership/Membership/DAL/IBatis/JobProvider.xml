<?xml version="1.0" encoding="utf-8" ?>
<sqlMap namespace="X3Platform.Membership.DAL.IBatis.JobProvider" xmlns="http://ibatis.apache.org/mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" >
    <alias>
        <typeAlias alias="JobInfo" type="X3Platform.Membership.Model.JobInfo,X3Platform.Membership" />
    </alias>
    <resultMaps>
        <resultMap id="proc_Job_FindOne_Result" class="JobInfo">
            <result property="Id" column="Id" />
            <result property="JobFamilyId" column="JobFamilyId" />
            <result property="Code" column="Code" />
            <result property="Name" column="Name" />
            <result property="Description" column="Description" />
            <result property="Lock" column="Lock" />
            <result property="OrderId" column="OrderId" />
            <result property="Status" column="Status" />
            <result property="Remark" column="Remark" />
            <result property="UpdateDate" column="UpdateDate" />
        </resultMap>
        <resultMap id="proc_Job_FindAll_Result" class="JobInfo">
            <result property="Id" column="Id" />
            <result property="JobFamilyId" column="JobFamilyId" />
            <result property="Code" column="Code" />
            <result property="Name" column="Name" />
            <result property="Description" column="Description" />
            <result property="Lock" column="Lock" />
            <result property="OrderId" column="OrderId" />
            <result property="Status" column="Status" />
            <result property="Remark" column="Remark" />
            <result property="UpdateDate" column="UpdateDate" />
        </resultMap>
    </resultMaps>
    <statements>

        <insert id="proc_Job_Insert" parameterClass="JobInfo">
            INSERT INTO [tb_Job] 
            (
                [Id],
                [JobFamilyId],
                [Code],
                [Name],
                [Lock],
                [OrderId],
                [Status],
                [Remark],
                [UpdateDate],
                [CreateDate]
            )
            VALUES
            (
                #Id#,
                #JobFamilyId#,
                #Code#,
                #Name#,
                #Lock#,
                #OrderId#,
                #Status#,
                #Remark#,
                CURRENT_TIMESTAMP,
                CURRENT_TIMESTAMP
            )
        </insert>

        <update id="proc_Job_Update" parameterClass="JobInfo">
            UPDATE [tb_Job] SET

                [JobFamilyId] = #JobFamilyId#,
                [Code] = #Code#,
                [Name] = #Name#,
                [Lock] = #Lock#,
                [OrderId] = #OrderId#,
                [Status] = #Status#,
                [Remark] = #Remark#,
                [UpdateDate] = CURRENT_TIMESTAMP

            WHERE [Id] = #Id#
        </update>

        <delete id="proc_Job_Delete" >
            DELETE FROM [tb_Job] WHERE $WhereClause$
        </delete>

        <select id="proc_Job_FindOne" resultMap="proc_Job_FindOne_Result" >
            SELECT * FROM [tb_Job] T WHERE [Id] = #Id#
        </select>

        <select id="proc_Job_FindAll" resultMap="proc_Job_FindAll_Result" >
            SELECT

            <dynamic prepend="TOP">
                <isNotEqual prepend="TOP" property="Length" compareValue = "0">
                    $Length$
                </isNotEqual>
            </dynamic>

            * FROM [tb_Job] T

            <dynamic prepend="WHERE">
                <isParameterPresent>
                    <isNotEmpty prepend="AND" property="WhereClause" >
                        $WhereClause$
                    </isNotEmpty>
                </isParameterPresent>
            </dynamic>
        </select>

        <select id="proc_Job_GetPages" resultMap="proc_Job_FindAll_Result" >
            SELECT *

            FROM (SELECT *, ROW_NUMBER() OVER(ORDER BY $OrderBy$) AS RowIndex

            FROM [tb_Job] T

            <dynamic prepend="WHERE">
                <isParameterPresent>
                    <isNotEmpty prepend="AND" property="WhereClause" >
                        $WhereClause$
                    </isNotEmpty>
                </isParameterPresent>
            </dynamic>) TableIndex

            WHERE TableIndex.RowIndex BETWEEN $StartIndex$ + 1 AND $StartIndex$ + $PageSize$
        </select>

        <select id="proc_Job_GetRowCount" >
            SELECT COUNT(*) AS 'RowCount' FROM [tb_Job] T

            <dynamic prepend="WHERE">
                <isParameterPresent>
                    <isNotEmpty prepend="AND" property="WhereClause" >
                        $WhereClause$
                    </isNotEmpty>
                </isParameterPresent>
            </dynamic>
        </select>

        <select id="proc_Job_IsExist" >
            SELECT COUNT(0) AS 'Count' FROM [tb_Job] T WHERE $WhereClause$
        </select>

        <update id="proc_Job_Rename" parameterClass="JobInfo">
            UPDATE [tb_Job] SET [Name] = #Name#, [UpdateDate] = CURRENT_TIMESTAMP WHERE [Id] = #Id#
        </update>
        
        <delete id="proc_Job_StandardRole_DeleteByJobId" >
            DELETE FROM [tb_Job_StandardRole] WHERE JobId = '$JobId$'
        </delete>

        <insert id="proc_Job_StandardRole_Insert" >
            INSERT INTO [tb_Job_StandardRole] ([JobId], [StandardRoleId]) VALUES ('$JobId$','$StandardRoleId$')
        </insert>

        <insert id="proc_Job_SyncFromPackPage" parameterClass="JobInfo" >
            IF EXISTS(SELECT 0 FROM [tb_Job] WHERE [Id] = #Id#)
            BEGIN
                UPDATE [tb_Job] SET

                    [JobFamilyId] = #JobFamilyId#,
                    [Code] = #Code#,
                    [Name] = #Name#,
                    [OrderId] = #OrderId#,
                    [Status] = #Status#,
                    [Remark] = #Remark#,
                    [UpdateDate] = CURRENT_TIMESTAMP

                WHERE [Id] = #Id#
            END
            ELSE
            BEGIN
                INSERT INTO [tb_Job] 
                (
                    [Id],
                    [JobFamilyId],
                    [Code],
                    [Name],
                    [OrderId],
                    [Status],
                    [Remark],
                    [UpdateDate],
                    [CreateDate]
                )
                VALUES
                (
                    #Id#,
                    #JobFamilyId#,
                    #Code#,
                    #Name#,
                    #OrderId#,
                    #Status#,
                    #Remark#,
                    CURRENT_TIMESTAMP,
                    CURRENT_TIMESTAMP
                )
            END
        </insert>

    </statements>
</sqlMap>
