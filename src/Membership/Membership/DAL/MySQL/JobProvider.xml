<?xml version="1.0" encoding="utf-8" ?>
<sqlMap namespace="X3Platform.Membership.DAL.MySQL.JobProvider" xmlns="http://ibatis.apache.org/mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" >
    <alias>
        <typeAlias alias="JobInfo" type="X3Platform.Membership.Model.JobInfo,X3Platform.Membership" />
    </alias>
    <resultMaps>
        <resultMap id="proc_Job_FindOne_Result" class="JobInfo">
            <result property="Id" column="Id" />
            <result property="Code" column="Code" />
            <result property="Name" column="Name" />
            <result property="Status" column="Status" />
            <result property="UpdateDate" column="UpdateDate" />
        </resultMap>
        <resultMap id="proc_Job_FindAll_Result" class="JobInfo">
            <result property="Id" column="Id" />
            <result property="Code" column="Code" />
            <result property="Name" column="Name" />
            <result property="Status" column="Status" />
            <result property="UpdateDate" column="UpdateDate" />
        </resultMap>
    </resultMaps>
    <statements>

        <insert id="proc_Job_Insert" parameterClass="JobInfo">
            INSERT INTO `tb_Job` (
                `Id`,
                `Code`,
                `Name`,
                `Status`,
                `UpdateDate`,
                `CreateDate`
            )
            VALUES
            (
                #Id#,
                #Code#,
                #Name#,
                #Status#,
                CURRENT_TIMESTAMP,
                CURRENT_TIMESTAMP
            )
        </insert>

        <update id="proc_Job_Update" parameterClass="JobInfo">
            UPDATE `tb_Job` SET

                `Code` = #Code#,
                `Name` = #Name#,
                `Status` = #Status#,
                `UpdateDate` = CURRENT_TIMESTAMP

            WHERE `Id` = #Id#
        </update>

        <delete id="proc_Job_Delete" >
            DELETE FROM `tb_Job` WHERE $WhereClause$
        </delete>

        <select id="proc_Job_FindOne" resultMap="proc_Job_FindOne_Result" >
            SELECT * FROM `tb_Job` T WHERE `Id` = #Id#
        </select>

        <select id="proc_Job_FindAll" resultMap="proc_Job_FindAll_Result" >
            SELECT * FROM `tb_Job` T

            <dynamic prepend="WHERE">
                <isParameterPresent>
                    <isNotEmpty prepend="AND" property="WhereClause" >
                        $WhereClause$
                    </isNotEmpty>
                </isParameterPresent>
            </dynamic>
            
            <dynamic prepend="LIMIT">
                <isNotEqual prepend="LIMIT" property="Length" compareValue = "0">
                    0,$Length$
                </isNotEqual>
            </dynamic>
        </select>

        <select id="proc_Job_GetPages" resultMap="proc_Job_FindAll_Result" >
            SELECT * FROM `tb_Job` T

            <dynamic prepend="WHERE">
                <isParameterPresent>
                    <isNotEmpty prepend="AND" property="WhereClause" >
                        $WhereClause$
                    </isNotEmpty>
                </isParameterPresent>
            </dynamic>

            ORDER BY $OrderBy$
            
            LIMIT $StartIndex$, $PageSize$
        </select>

        <select id="proc_Job_GetRowCount" >
            SELECT COUNT(*) AS 'RowCount' FROM `tb_Job` T

            <dynamic prepend="WHERE">
                <isParameterPresent>
                    <isNotEmpty prepend="AND" property="WhereClause" >
                        $WhereClause$
                    </isNotEmpty>
                </isParameterPresent>
            </dynamic>
        </select>

        <select id="proc_Job_IsExist" >
            SELECT COUNT(0) AS 'Count' FROM `tb_Job` T WHERE $WhereClause$
        </select>

        <update id="proc_Job_Rename" parameterClass="JobInfo">
            UPDATE `tb_Job` SET `Name` = #Name#, `UpdateDate` = CURRENT_TIMESTAMP WHERE `Id` = #Id#
        </update>
        
        <delete id="proc_Job_StandardRole_DeleteByJobId" >
            DELETE FROM `tb_Job_StandardRole` WHERE JobId = '$JobId$'
        </delete>

        <insert id="proc_Job_StandardRole_Insert" >
            INSERT INTO `tb_Job_StandardRole` (`JobId`, `StandardRoleId`) VALUES ('$JobId$','$StandardRoleId$')
        </insert>

        <insert id="proc_Job_SyncFromPackPage" parameterClass="JobInfo" >
            IF EXISTS(SELECT 0 FROM `tb_Job` WHERE `Id` = #Id#)
            BEGIN
                UPDATE `tb_Job` SET

                `Code` = #Code#,
                `Name` = #Name#,
                `Status` = #Status#,
                `UpdateDate` = CURRENT_TIMESTAMP

                WHERE `Id` = #Id#
            END
            ELSE
            BEGIN
                INSERT INTO `tb_Job` 
                (
                    `Id`,
                    `Code`,
                    `Name`,
                    `Status`,
                    `UpdateDate`,
                    `CreateDate`
                )
                VALUES
                (
                    #Id#,
                    #Code#,
                    #Name#,
                    #Status#,
                    CURRENT_TIMESTAMP,
                    CURRENT_TIMESTAMP
                )
            END
        </insert>

    </statements>
</sqlMap>
